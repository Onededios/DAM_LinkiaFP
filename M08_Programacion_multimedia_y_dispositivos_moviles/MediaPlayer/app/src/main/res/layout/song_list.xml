<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageViewPortrait"
        android:layout_width="0dp"
        android:layout_height="80dp"
        tools:srcCompat="@tools:sample/avatars"
        android:layout_weight="0.1"
        android:scaleType="fitStart"
        android:backgroundTint="#edf2f4"
        android:layout_margin="5dp"/>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.4"
        android:layout_marginTop="2.5dp">

        <TextView
            android:id="@+id/TextViewName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="25 - Alex Theme (Silent Hill Homecoming) (64 kbps)"
            android:textColor="#edf2f4"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/TextViewAuthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Akira Yamaoka"
            android:textColor="#8d99ae"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/TextViewAlbum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Silent Hill"
            android:textColor="#edf2f4"
            android:textSize="12.5sp" />

        <TextView
            android:id="@+id/TextViewDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="00:00:00"
            android:textColor="#8d99ae"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>
