<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/gradient_main_bg" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        android:backgroundTint="#042940"
        app:layout_constraintBottom_toTopOf="@+id/mainBot"
        app:layout_constraintEnd_toStartOf="@+id/mainRight"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/mainLeft"
        app:layout_constraintTop_toTopOf="@+id/mainTop"
        app:layout_constraintVertical_bias="0.0"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="– Sign In –"
        android:textAlignment="center"
        android:textColor="#9FC131"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/maxTitleBot"
        app:layout_constraintEnd_toStartOf="@+id/mainRight"
        app:layout_constraintStart_toStartOf="@+id/mainLeft"
        app:layout_constraintTop_toTopOf="@+id/mainTop" />

    <View
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="#DBF227"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toTopOf="@+id/maxUserBot"
        app:layout_constraintEnd_toStartOf="@+id/mainRight"
        app:layout_constraintStart_toStartOf="@+id/mainLeft"
        app:layout_constraintTop_toTopOf="@+id/mainTop" />

    <EditText
        android:id="@+id/editTextUserInp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Username"
        android:textColor="#9FC131"
        android:textColorHint="#DBF227"
        android:backgroundTint="#9FC131"
        app:layout_constraintBottom_toTopOf="@+id/maxUserBot"
        app:layout_constraintEnd_toStartOf="@+id/mainRight"
        app:layout_constraintStart_toStartOf="@+id/svgFieldSeparator"
        app:layout_constraintTop_toTopOf="@+id/maxTitleBot" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="15dp"
        app:layout_constraintBottom_toTopOf="@+id/maxUserBot"
        app:layout_constraintEnd_toStartOf="@+id/svgFieldSeparator"
        app:layout_constraintStart_toStartOf="@+id/mainLeft"
        app:layout_constraintTop_toTopOf="@+id/maxTitleBot"
        app:srcCompat="@drawable/abstract_user_flat_4" />

    <EditText
        android:id="@+id/editTextPassInp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="#9FC131"
        android:textColorHint="#DBF227"
        android:backgroundTint="#9FC131"
        android:hint="Password"
        app:layout_constraintBottom_toTopOf="@+id/maxPassBot"
        app:layout_constraintEnd_toStartOf="@+id/mainRight"
        app:layout_constraintStart_toStartOf="@+id/svgFieldSeparator"
        app:layout_constraintTop_toTopOf="@+id/maxUserBot" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toTopOf="@+id/maxPassBot"
        app:layout_constraintEnd_toStartOf="@+id/svgFieldSeparator"
        app:layout_constraintStart_toStartOf="@+id/mainLeft"
        app:layout_constraintTop_toTopOf="@+id/maxUserBot"
        app:srcCompat="@drawable/_542668334" />

    <Button
        android:id="@+id/buttonSubmit"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:backgroundTint="#DBF227"
        android:text="Submit"
        android:textColor="#042940"
        app:layout_constraintBottom_toTopOf="@+id/maxLoginBtnBot"
        app:layout_constraintEnd_toStartOf="@+id/mainRight"
        app:layout_constraintStart_toStartOf="@+id/mainLeft"
        app:layout_constraintTop_toTopOf="@+id/maxPassBot" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#D6D58E"
        android:text="User Validation APP - Joel Olivera"
        app:layout_constraintBottom_toTopOf="@+id/mainBot"
        app:layout_constraintEnd_toStartOf="@+id/mainRight"
        app:layout_constraintStart_toStartOf="@+id/mainLeft"
        app:layout_constraintTop_toTopOf="@+id/maxLoginBtnBot" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/mainLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/mainRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/mainTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/mainBot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/maxTitleBot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/maxUserBot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/maxPassBot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/maxLoginBtnBot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/svgFieldSeparator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3" />

</androidx.constraintlayout.widget.ConstraintLayout>